header
  background: mainColor center no-repeat
  height: 70px

  .container
    position: relative
    display: flex
    justify-content: space-between
    align-items:center
    height: 70px
    padding: 15px 0

.header-logo
  position: relative
  top: 35px
  z-index: 1
  //left: 50%
  //margin-left: -70px

.header-nav
  cursor: pointer

.header-nav__title
  margin-left: 15px
  color: #fff

.header-about
  span
    display: block
    font-size: 16px

.header-company__name
  margin-bottom: 5px
  text-transform: uppercase
  font-size: 16px
  font-weight: bold

.header-phone
  position: relative
  padding-left: 40px

  &::before
    content: ''
    position: absolute
    left: 0
    top: 50%
    margin-top: -12px
    display: block
    width: 25px
    height: 25px
    background: url("../img/svg/phone.svg") 0 0 no-repeat
    background-size: 100%

  a
    display: block
    color: #fff
    font-size: 20px

    &:first-child
      margin-bottom: 5px