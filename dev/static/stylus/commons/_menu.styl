.header-nav__list
  position: absolute
  top: 80px
  left: 0
  display: none
  z-index:1
  background-color: #fff

.header-nav__link
  display: block
  padding: 15px 15px 15px 20px
  color: mainColor
  border-bottom: 1px solid mainColor

  &:hover
    background-color: mainColor
    color: #fff
    transition all linear .2s