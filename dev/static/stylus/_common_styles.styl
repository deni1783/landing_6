.sandwich
  position: relative
  display: inline-block
  vertical-align: middle
  width: 50px
  height: 50px
  border: 1px solid white
  border-radius 50px

  &.active
    .sandwich-line--top
      top 21px
      transform rotate(45deg)

    .sandwich-line--middle
      opacity 0

    .sandwich-line--bottom
      top: 21px
      transform rotate(-45deg)
  
.sandwich-line
  position: absolute
  left: 50%
  margin-left: -12.5px
  display: block
  width: 25px
  height: 4px
  background-color: #fff
  transition all linear .5s

.sandwich-line--top
  top 15px

.sandwich-line--middle
  top 22px

.sandwich-line--bottom
  top: 29px


.g-btn
  display: inline-block
  height: 30px
  line-height: 28px
  padding: 0 20px
  border: 1px solid #fff
  border-radius 20px
  color: #fff
  cursor: pointer
  background-color: mainColor
  transition all linear .3s

  &:hover
    background-color: #fff
    color: mainColor

.g-section-title
  margin-bottom: 30px
  font-size: 42px
  text-align: center
  color: mainColor

  &.g-section-title--white
    color: #fff


.instagram-text
  font-size: 24px
  font-weight: bold
  position: relative
  display: block
  padding-left: 45px
  color: mainColor

  &:before
    content: ''
    vertical-align: middle
    display: inline-block
    margin-right: 15px
    width: 35px
    height: 35px
    background: url("../img/svg/instagram.svg") 0 0 no-repeat